@{
    @model API.Usage.Demo.Classes.CryptoNewsResponse
    var results = Model.CryptoNews ?? Enumerable.Empty<API.Usage.Demo.Classes.CryptoNewsItem>();
    ViewData["Title"] = "Cryptocurrency News";
}

<div style="width: 100%; display: flex; justify-content: center;">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" style="width:75%">
        <div class="carousel-inner">
            @{
                var isFirst = true;
                foreach (var item in results.Where(w => string.IsNullOrEmpty(w.ImageURL) == false))
                {
                    if (isFirst)
                    {
                        <div class="carousel-item active">
                            <img src="@item.ImageURL" class="d-block w-100" alt="..">
                            <div class="carousel-caption d-none d-md-block">
                                <h6 class="title-bg title m-0">@item.Title</h6>
                                @if (string.IsNullOrEmpty(item.Description) == false)
                                {
                                    <div style="padding-top:5px">
                                        <p class="description">@item.Description</p>
                                    </div>
                                }
                                <div style="padding-top:5px">
                                    <a href="@item.Link" class="btn-sm btn-success" target="_blank">Open article</a>
                                </div>
                            </div>
                        </div>
                        isFirst = false;
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="@item.ImageURL" class="d-block w-100" alt="..">
                            <div class="carousel-caption d-none d-md-block">
                                <h6 class="title-bg title m-0">@item.Title</h6>
                                @if (string.IsNullOrEmpty(item.Description) == false)
                                {
                                    <div style="padding-top:5px">
                                        <p class="description">@item.Description</p>
                                    </div>
                                }
                                <div style="padding-top:5px">
                                    <a href="@item.Link" class="btn-sm btn-success" target="_blank">Open article</a>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>